<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.EzloTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EzloTest" parent="Base.Theme.EzloTest" />

    <style name="ProfileNameTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitleTheme" parent="ProfileNameTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ItemDescriptionTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DeviceTitleTheme" parent="ProfileNameTheme">
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DeviceTextTheme" parent="DeviceTitleTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>